package br.pro.hashi.ensino.desagil.tequilada;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class Board {
	boolean[][] isWall;

	void loadFromFile(String path) {

		try {
			BufferedReader reader = new BufferedReader(new FileReader(path));

			// Reads first line and returns string
			String line = reader.readLine();

			// Reaching a blank space, splits string
			String[] words = line.split(" ");

			// Each splitted part becomes a number
			int numRows = Integer.parseInt(words[0]);
			int numCols = Integer.parseInt(words[1]);

			// Atributes isWall with numbers read above
			isWall = new boolean[numRows][numCols];

			// Reads each line from the file
			for(int i = 0; i < numRows; i++) {
				line = reader.readLine();

				// For every item in line
				for(int j = 0; j < numCols; j++) {
					boolean value;

					if(line.charAt(j) == '#') {
						value = true;
					}
					else {
						value = false;
					}
					isWall[i][j] = value;
				}
			}
			// Closes reader
			reader.close();
		}
		
		catch(FileNotFoundException exception) {
			System.out.println(exception);
		}

		catch(IOException exception) {
			System.out.println(exception);
		}
	}
}
